{
  "name": "node-api-template",
  "version": "1.0.0",
  "description": "Node.js API 通用模板 - 基于 Koa + TypeScript 的企业级后端服务模板",
  "_moduleAliases": {
    "@root": ".",
    "@": "./src"
  },
  "scripts": {
    "start:dev": "cross-env CURRENT_ENV=dev nodemon ./src/index.ts",
    "start:prod": "cross-env CURRENT_ENV=prod ts-node ./src/index.ts",
    "dev": "pnpm start:dev",
    "start": "pnpm start:prod",
    "build": "tsc",
    "build:clean": "rm -rf dist && pnpm build",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "clean": "bash scripts/clean.sh",
    "clean:all": "bash scripts/clean.sh --all",
    "docker:build": "bash scripts/docker-build.sh",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "init": "bash scripts/init.sh",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "keywords": [
    "koa",
    "typescript",
    "api",
    "template",
    "node",
    "backend",
    "rest-api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.7",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.15.3",
    "koa-body": "^6.0.1",
    "koa-jwt": "^4.0.4",
    "koa-router": "^12.0.1",
    "koa2-cors": "^2.0.6",
    "lodash": "^4.17.21",
    "log4js": "^6.4.6",
    "mongoose": "^8.6.1",
    "nodemon": "^3.1.4",
    "redis": "^4.7.0",
    "ts-node": "^10.9.2",
    "uuid": "^10.0.0",
    "validator": "^13.12.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/koa": "^2.13.4",
    "@types/koa-router": "^7.4.4",
    "@types/koa2-cors": "^2.0.2",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.0",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.11.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "eslint": "^8.50.0",
    "jest": "^29.5.0",
    "module-alias": "^2.2.3",
    "prettier": "^3.0.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  }
}
